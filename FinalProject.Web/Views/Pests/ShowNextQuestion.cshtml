@model FinalProject.Web.Models.QuestionViewModel

@{
    ViewBag.Title = "Figure Out Bug";
}


<h2>@Model.QuestionText</h2>

@using (Html.BeginForm())
{

    foreach (var ans in Model.Answers)
    {
        <div class="radio">
            <label>
                <input type="radio" name="SelectedAnswer" id="answers(@ans.Key)" value="@ans.Key" />
                @ans.Value
            </label>
        </div>
    }
    <input type="submit" value="Next Question >" class="btn btn-primary" />
}

<br /><br /><span>Matching @Html.ActionLink(Model.NumberOfResults + " pests", "Results"). </span>

@Html.ActionLink("Start Over", "StartOver", null, new { @class = "btn  btn-xs btn-danger" })




